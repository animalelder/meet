{
  "compilerOptions": {
    "lib": ["es2023"],
    "target": "es2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "allowSyntheticDefaultImports": true,
    "paths": {
      "*": ["src/*"],
      "@/*": ["./src/*"]
    }
  },
  "include": ["src", "**/*.js", "**/*.jsx"]
}
