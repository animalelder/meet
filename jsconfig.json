{
  "compilerOptions": {
    "lib": ["es2023"],
    "target": "ES6",
    "module": "Node16",
    "allowJs": true,
    "moduleResolution": "Node16",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "baseUrl": "./",
    "allowSyntheticDefaultImports": true,
    "paths": {
      "*": ["src/*"],
      "@/*": ["./src/*"]
    }
  },
  "include": ["src", "**/*.js", "**/*.jsx"]
}
